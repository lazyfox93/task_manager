<%=form_for @task, :html =>{:class=>'form'}  do |form|%>

<div class="form-group">
<p><%=form.label :title, 'Title'%></p>
<p><%=form.text_field :title, class: "form-control"%></p>
</div>

<div class="form-group">
<p><%=form.label :description, 'Description' %></p>
<p><%=form.text_area :description, cols: 30, rows: 20, class: "form-control"%></p>
</div>

<div class="form-group">
<p><%=form.label :due_date,'Deadline' %></p>
<p><%=form.datetime_select :due_date, class: "form-control"%></p>
</div>

<div class="form-group">
<p><%=form.label :priority, 'Priority'%>
<p><%=form.number_field :priority, min: 1, max: 5, class: "form-control" %></p>
</div>



<p><%=form.submit%></p>
<%-end%>