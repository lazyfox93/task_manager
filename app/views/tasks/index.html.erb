<div class="row">
  <div class="col-lg-12">
  <h1>List of tasks</h1>
    <%=link_to 'Create new task', new_task_path%>
    <%=link_to 'Sort by name', sort_by_name_tasks_path%>
    <input type="button" id="check" value="check all">
    <input type="button" id="uncheck" value="uncheck all">
  </div>
</div>
<%=form_tag destroy_multiple_tasks_path, method: :delete do%>
<div class="row">

  <div class="col-lg-6">
  <h2>To do:</h2>
  <ul id="to_do">
  <%- @tasks.each do |t|%>
    <%-if (can? :read, t) && (!t.complete?)%>
    <li>
    <%=check_box_tag 'ids[]', t.id, false,  class: "delete_elemnts" %>
    <%=link_to 'Done', complete_task_path(id: t.id), method: :patch%>
    <%=link_to t.title, task_path(id: t.id)%>
    <ul class="hiden">
      <li><%=link_to 'Edit',edit_task_path(id: t.id) %></li>
      <li><%=link_to'Delete', task_path(id: t.id), method: :delete %></li>
    </ul>
    </li>
    <%-end%>
  <%-end%>
  </ul>
  <%=submit_tag "Batch delete"%>
  </div>

  <div class="col-lg-6">
  <h2>Done:</h2>
  <ul>
  <%- @tasks.each do |t|%>
    <%-if (can? :read, t) && (t.complete?)%>
    <li>
    <%=check_box_tag 'ids[]', t.id, false,  class: "delete_elemnts" %>
    <%=link_to 'Redo', complete_task_path(id: t.id), method: :patch%>
    <%=link_to t.title, task_path(id: t.id)%>
    <ul class="hiden">
      <li><%=link_to 'Edit',edit_task_path(id: t.id) %></li>
      <li><%=link_to'Delete', task_path(id: t.id), method: :delete %></li>
    </ul>
    </li>
    <%-end%>
  <%-end%>   
  </div>

</div>

<%-end%>